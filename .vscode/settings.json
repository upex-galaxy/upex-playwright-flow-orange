{
	// =====================
	//? File Associations
	// =====================
	"files.associations": {
		"*.yml": "yaml",
		"*.json": "jsonc"
	},
	// =====================
	//? Language Specific Settings
	// =====================
	"[markdown]": {
		"editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
		"editor.tabSize": 4,
		"editor.insertSpaces": true,
		"editor.formatOnSave": true,
		"editor.formatOnPaste": true
	},
	"[Typescript]": {
		"editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
	},
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true
	},
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[yaml]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2,
		"editor.autoIndent": "keep",
		"diffEditor.ignoreTrimWhitespace": false,
		"editor.defaultFormatter": "kennylong.kubernetes-yaml-formatter",
		"editor.formatOnSave": true
	},
	"[github-actions-workflow]": {
		"editor.defaultFormatter": "kennylong.kubernetes-yaml-formatter"
	},
	// =====================
	//? Editor Settings
	// =====================
	"editor.autoIndent": "advanced",
	"editor.bracketPairColorization.independentColorPoolPerBracketType": true,
	"editor.cursorBlinking": "expand",
	"editor.defaultFormatter": "rvest.vs-code-prettier-eslint",
	"editor.formatOnType": false, // required
	"editor.formatOnPaste": true, // optional
	"editor.formatOnSave": true, // optional
	"editor.formatOnSaveMode": "file", // required to format on save
	"vs-code-prettier-eslint.prettierLast": false, // set as "true" to run 'prettier' last not first
	"editor.lineHeight": 20,
	"editor.defaultColorDecorators": true,
	"editor.insertSpaces": false,
	"editor.tabSize": 4,
	"editor.detectIndentation": true,
	"editor.codeActionsOnSave": {
		"source.fixAll": "explicit",
		"source.fixAll.markdownlint": "explicit",
		"source.fixAll.eslint": "explicit"
	},
	"editor.quickSuggestions": {
		"comments": true,
		"other": true,
		"strings": true
	},
	"editor.tabCompletion": "on",
	"editor.wordWrap": "off",
	"markdownlint.config": {
		"default": true,
		"MD029": false,
		"ul-indent": { "indent": 4 }
	},
	"files.eol": "\n",
	// =====================
	//? ESLint Settings
	// =====================
	"eslint.codeAction.showDocumentation": {
		"enable": true
	},
	"eslint.format.enable": true,
	"eslint.validate": ["typescript", "javascript", "ts", "js"],
	// =====================
	//? JSON Settings
	// =====================
	"json.validate.enable": true,
	"json.format.enable": true,
	// =====================
	//? Explorer Settings
	// =====================
	"explorer.fileNesting.enabled": true,
	"explorer.compactFolders": false,
	// =====================
	//? File AutoSave Settings
	// =====================
	"files.autoSave": "onFocusChange",
	// =====================
	//? Git Settings
	// =====================
	"git.enableSmartCommit": true,
	// =====================
	//? JavaScript Settings
	// =====================
	"javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": true,
	"javascript.updateImportsOnFileMove.enabled": "always",
	// =====================
	//? TypeScript Settings
	// =====================
	"typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": true,
	"typescript.updateImportsOnFileMove.enabled": "always",
	// =====================
	//? Material Icon Theme Settings
	// =====================
	"material-icon-theme.folders.color": "#7cb342",
	"material-icon-theme.files.associations": {
		"tsconfig.json": "svgo",
		"tsconfig.eslint.json": "eslint",
		"modules.d.ts": "typescript",
		"regression.yml": "test-ts",
		"sanityTest.yml": "test-ts",
		"build.yml": "test-ts",
		"playwright.chrome.config.ts": "playwright",
		"playwright.firefox.config.ts": "playwright",
		"playwright.edge.config.ts": "playwright",
		"playwright.iphone.config.ts": "playwright",
		"playwright.azure.config.ts": "azure",
		"*.test.js": "test-tsx",
		"testUtils.ts": "3d",
		"TestBase.ts": "3d"
	},
	"material-icon-theme.folders.associations": {
		"workflows": "github",
		"test-html-report": "resolver",
		"test-junit-report": "resolver",
		"test-results": "content",
		"allure-results": "content",
		"allure-report": "mjml",
		"support": "tools"
	},
	// =====================
	//? Testing Settings
	// =====================
	"testing.alwaysRevealTestOnStateChange": true,
	"testing.automaticallyOpenPeekViewDuringAutoRun": true,
	"debug.javascript.autoAttachFilter": "onlyWithFlag",
	// =====================
	//? Terminal Settings
	// =====================
	"terminal.integrated.cursorBlinking": true,
	"terminal.integrated.cursorStyle": "line",
	"terminal.integrated.defaultProfile.windows": "Git Bash",
	"terminal.integrated.tabs.defaultColor": "terminal.ansiGreen",
	"terminal.integrated.tabs.defaultIcon": "source-control",
	"terminal.integrated.enablePersistentSessions": true,
	// =====================
	//? Workbench Settings
	// =====================
	"workbench.colorTheme": "Winter is Coming (Dark Blue)",
	"workbench.iconTheme": "material-icon-theme",
	"workbench.settings.editor": "json",
	"workbench.tree.enableStickyScroll": true,
	"files.watcherExclude": {
		"**/.git/objects/**": true,
		"**/node_modules/**": true,
		"**/docs/**": true,
		"**/data/**": true,
		"**/downloads/**": true,
		"**/screenshots/**": true,
		"**/allure-results/**": true,
		"**/allure-report/**": true,
		"**/reports/**": true
	}
}
